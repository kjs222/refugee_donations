<!DOCTYPE html>
<html>
<head>
  <title>RefugeeDonations</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
</head>
<body>

  <nav class="navbar navbar-inverse">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">RefugeesWelcome</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav navbar-right">
        <li><a href="/families">Families</a></li>
        <% if current_user %>
        <li><a href="/users/<%=current_user.id %>">Profile</a></li>
        <% end %>
        <li><a href="/about">About</a></li>
      </ul>


      <% if current_user %>
        <p class="navbar-brand pull-right">Welcome, <%= current_user.username %> </p>
        <%= link_to "Logout", logout_path, method: :delete, class: "navbar-brand pull-right"%>

      <% else %>
        <%= link_to "Login", login_path,class: "navbar-brand pull-right"%>
      <% end %>

    </div>
  </div>
</nav>


<div class="container">


<%= yield %>

</div>

</body>
</html>
